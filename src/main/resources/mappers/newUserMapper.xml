<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.jinw0909.spring.lesson04.dao.NewUserDAO">
 	<insert id="insertNewUser" parameterType="map">
 		INSERT INTO
 			`new_user`
 		(
 			`name`
 			, `yyyymmdd`
 			, `introduce`
 			, `email`
 			, `createdAt`
 			, `updatedAt`
 		) 
 		VALUES 
 		(
 			#{name}
 			, #{yyyymmdd}
 			, #{introduce}
 			, #{email}
 			, now()
 			, now()
 		)
 	</insert>
 	<select id="selectCountName" parameterType="string">
 		SELECT COUNT(1)
 		FROM
 			`new_user`
 		WHERE
 			`name` = #{name} 
 		
 	</select>
 </mapper>